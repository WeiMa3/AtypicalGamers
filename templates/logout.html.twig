	</nav>

<!-- welcome -->
	<div class="container-fluid minwidth">
		<div class="row col-12 d-flex my-5">
			<div class="col-12 text-center""><h4 class="my-5 ">
				See you next time! <br></h4><p id="countdown">Redirecting to previous page in 5 seconds.</p><button class="btn theme-red text-white" onclick="goBack()">Go back now</button></div>
			</div>
		</div>
