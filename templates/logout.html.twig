    <script type="text/javascript">
    	function goBack() {
    		window.history.back();
    	}

		var num = 4;
	    var a = window.setInterval('doUpdate()', 1000);
	    function doUpdate() {
	        document.getElementById('countdown').innerHTML = 'Redirecting to previous page in '+num+' seconds.' ;
	        if(num == 0) {
	            window.clearInterval(a);
	            window.history.back();
	        }
	        num --;
	    }

    </script>

  </body>
